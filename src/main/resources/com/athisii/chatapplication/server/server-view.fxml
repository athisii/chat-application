<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.athisii.chatapplication.server.ServerController"
            prefHeight="400" prefWidth="640">

    <Label text="Chat Application" layoutX="240" layoutY="10">
        <font>
            <Font name="Arial Rounded MT Bold" size="23"/>
        </font>
    </Label>
    <ScrollPane fx:id="spMain" layoutX="30" layoutY="50" prefHeight="360" prefWidth="580" fitToWidth="true">
        <VBox fx:id="vbMessages" prefHeight="350" prefWidth="580"/>
    </ScrollPane>
    <TextField fx:id="tfMessage" layoutX="30" layoutY="420" prefHeight="30" prefWidth="520"/>
    <Button fx:id="btnSend" layoutX="560" layoutY="420" prefHeight="30" text="Send"/>
</AnchorPane>
